#ifdef ex5
int main() {
	int horasI, minutosI, segundosI, horasF, minutosF, segundosF;
	char Resposta;
	setlocale(LC_ALL,"");
do{

	do {
		printf("Digite a hora que a ligação foi iniciada: ");
		scanf("%d,&horasI);
		if(horasI<0)
			printf("Digite um valor válido!\n);
	}while(horas<0);

	do {
		printf("\nDigite os minutos em que a ligação foi iniciada: ");
		scanf("%d,&minutosI);
		if(minutosI<0)
			printf("Digite um valor válido!\n);
	}while(minutosI<0);

	do {
		printf("\nDigite os segudos em que ligação foi iniciada: ");
		scanf("%d,&segundosI);
		if(segundosI<0)
			printf("Digite um valor válido!\n);
	}while(segundosI<0);

//
	do {
		printf("Digite a hora que a ligação foi finalizada: ");
		scanf("%d,&horasF);
		if(horasF<0)
			printf("Digite um valor válido!\n);
	}while(horasF<0);

	do {
		printf("\nDigite os minutos em que a ligação foi finalizada: ");
		scanf("%d,&minutosF);
		if(minutosF<0)
			printf("Digite um valor válido!\n);
	}while(minutosF<0);

	do {
		printf("\nDigite os segudos em que ligação foi finalizada: ");
		scanf("%d,&segundosF);
		if(segundosF<0)
			printf("Digite um valor válido!\n);
	}while(segundosF<0);

	horasI = horasF-horasI;
	minutosI = minutosF - minutosI;
	segundosI = segundosF - segundosI;
	printf("\nA ligação teve duração de %d horas, %d minutos e %d segundos",horasI,minutosI,segundosI);
	printf("\n\nDigite S caso queira verificar a duração de alguma outra ligação: ");
	scanf("%c",&Resposta);
	getchar();
}while(Resposta = 'S' || Resposta = 's');
system("cls");
return 0;
}
#endif//ex5

int verifiar(numeroII) {
int valor;
if(numeroII%2 == 0)
	valor=1;
else
	valor=0;

return valor;
}

int main() {
	int numeroI, numeroII, verificadoI, verificadoII;

	printf("Digite o valor do número 1: ");
	scanf("%d",&numeroII);
	verificar(numeroII) = verificadoI;
	numeroI = numeroII;

	printf("Digite o valor do número 2: ");
	scanf("%d",&numeroII);
	verificar(numeroII) = verificadoII;

	if(verificadoI==0 && verificadoII == 0)numeroI*numeroII);
	else  printf("a divisão dos números é %d",numeroI/numeroII);
